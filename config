bindsym $alt+$sup+Shift+Left move container to workspace prev; workspace prev
bindsym $alt+$sup+Shift+Right move container to workspace next; workspace next
bindsym $alt+$sup+Shift+h move container to workspace prev; workspace prev
bindsym $alt+$sup+Shift+l move container to workspace next; workspace next

# move workspace to screen
bindsym $alt+$ctrl+Shift+1 move workspace to output $screenleft; focus output $screenleft
