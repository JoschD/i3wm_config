# Aliases ----------------------------------------------------------------------
# Key-Aliases
set $alt Mod1
set $sup Mod4
set $ctrl Control

# Monitors
set $screenleft DP-1
set $screenmiddle DP-2
set $screenright DP-3

# Workspaces
set $workspace1 1:Main
set $workspace2 2
set $workspace3 3
set $workspace4 4
set $workspace5 5
set $workspace6 6
set $workspace7 7
set $workspace8 8:Browser
set $workspace9 9:Social
set $workspace10 0:Terminals

# Font Setup -------------------------------------------------------------------
# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace 8

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

# Before i3 v4.8, we used to recommend this one as the default:
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, its unicode glyph coverage is limited, the old
# X core fonts rendering does not support right-to-left and this being a bitmap
# font, it doesn’t scale on retina/hidpi displays.

# General Keybindings ----------------------------------------------------------
# Use Mouse+$alt to drag floating windows to their wanted position
floating_modifier $alt

# reload the configuration file
bindsym $alt+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $alt+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $alt+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
# lock screen
bindsym $sup+l exec "gnome-screensaver-command -l"


# Start Programs ---------------------------------------------------------------
# dmenu (a program launcher)
bindsym $alt+d exec dmenu_run

# i3-dmenu-desktop which only displays applications shipping a .desktop file. 
# It is a wrapper around dmenu, so you need that installed.
bindsym $sup+d exec --no-startup-id i3-dmenu-desktop

# start a terminal
# bindsym $alt+Return exec i3-sensible-terminal
bindsym $alt+$ctrl+T exec i3-sensible-terminal

# kill 
# - focused window
bindsym $alt+Shift+q kill
bindsym $alt+F4 kill
# - choosen window
bindsym $ctrl+$alt+Delete --release exec "xwininfo | grep 'Window id:' | awk -F' ' '{print $4}' | xargs -I{} i3 '[id={}] kill'"
bindsym $ctrl+$alt+Shift+Delete --release exec xkill

# Task Manager
bindsym $ctrl+Shift+Escape exec gnome-terminal -e "htop"

# Explorer
bindsym $sup+e exec "nautilus -w"

# Screenshots ------------------------------------------------------------------

# gnome-screenshot does not work in all cases and not with clipboard...
# bindsym --release Print exec --no-startup-id "gnome-screenshot -i"
# bindsym --release $sup+Print exec --no-startup-id "gnome-screenshot"
# bindsym --release Shift+Print exec --no-startup-id "gnome-screenshot -c"
# bindsym --release $alt+Print exec --no-startup-id "gnome-screenshot -w"
# bindsym --release $alt+Shift+Print exec --no-startup-id "gnome-screenshot -w -c"
# bindsym --release $ctrl+Print exec --no-startup-id "gnome-screenshot -a"
# bindsym --release $ctrl+Shift+Print exec --no-startup-id "gnome-screenshot -a -c"

set $screenshotfile ~/Pictures/Screenshots/screenshot-$(date +%F-%T).png
set $toclipboard xclip -selection clipboard -t image/png

# full screen ---
bindsym --release Print exec --no-startup-id "maim $screenshotfile"
bindsym --release Shift+Print exec --no-startup-id "maim | $toclipboard"

# active window ---
bindsym --release $sup+Print exec --no-startup-id "maim -i $(xdotool getactivewindow) $screenshotfile"
bindsym --release $sup+Shift+Print exec --no-startup-id "maim -i $(xdotool getactivewindow) | $toclipboard"

# select area ---
bindsym --release $ctrl+Print exec --no-startup-id "maim -s $screenshotfile"
bindsym --release $ctrl+Shift+Print exec --no-startup-id "maim -s | $toclipboard"

# select window ---
bindsym --release $sup+$ctrl+Print exec --no-startup-id "maim -st 9999999 $screenshotfile"
bindsym --release $sup+$ctrl+Shift+Print exec --no-startup-id "maim -st 9999999 | $toclipboard"


# Windows and Workspaces -------------------------------------------------------

# change focus
bindsym $alt+h focus left
bindsym $alt+j focus down
bindsym $alt+k focus up
bindsym $alt+l focus right

# alternatively, you can use the cursor keys:
bindsym $alt+Left focus left
bindsym $alt+Down focus down
bindsym $alt+Up focus up
bindsym $alt+Right focus right

# move focused window
bindsym $alt+Shift+h move left
bindsym $alt+Shift+j move down
bindsym $alt+Shift+k move up
bindsym $alt+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $alt+Shift+Left move left
bindsym $alt+Shift+Down move down
bindsym $alt+Shift+Up move up
bindsym $alt+Shift+Right move right

# split in horizontal orientation
bindsym $alt+c split h

# split in vertical orientation
bindsym $alt+v split v

# enter fullscreen mode for the focused container
bindsym $alt+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $alt+s layout stacking
bindsym $alt+w layout tabbed
bindsym $alt+e layout toggle split

# toggle tiling / floating
bindsym $alt+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $alt+space focus mode_toggle

# focus the parent container
bindsym $alt+a focus parent

# focus the child container
#bindsym $alt+d focus child

# switch to workspace
bindsym $alt+1 workspace $workspace1
bindsym $alt+2 workspace $workspace2
bindsym $alt+3 workspace $workspace3
bindsym $alt+4 workspace $workspace4
bindsym $alt+5 workspace $workspace5
bindsym $alt+6 workspace $workspace6
bindsym $alt+7 workspace $workspace7
bindsym $alt+8 workspace $workspace8
bindsym $alt+9 workspace $workspace9
bindsym $alt+0 workspace $workspace10

bindsym $alt+$sup+Left workspace prev
bindsym $alt+$sup+Right workspace next

bindsym $alt+$ctrl+Left focus output left
bindsym $alt+$ctrl+Right focus output Right

# move focused container to workspace
bindsym $alt+Shift+1 move container to workspace $workspace1
bindsym $alt+Shift+2 move container to workspace $workspace2
bindsym $alt+Shift+3 move container to workspace $workspace3
bindsym $alt+Shift+4 move container to workspace $workspace4
bindsym $alt+Shift+5 move container to workspace $workspace5
bindsym $alt+Shift+6 move container to workspace $workspace6
bindsym $alt+Shift+7 move container to workspace $workspace7
bindsym $alt+Shift+8 move container to workspace $workspace8
bindsym $alt+Shift+9 move container to workspace $workspace9
bindsym $alt+Shift+0 move container to workspace $workspace10

# move workspace to screen
bindsym $alt+$ctrl+Shift+1 move workspace to output $screenleft
bindsym $alt+$ctrl+Shift+2 move workspace to output $screenmiddle
bindsym $alt+$ctrl+Shift+3 move workspace to output $screenright
bindsym $alt+$ctrl+Shift+Left move workspace to output left
bindsym $alt+$ctrl+Shift+Right move workspace to output right


# Assign Output ---
workspace $workspace1 output $screenmiddle
